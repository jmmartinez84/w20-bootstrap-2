{
  "id": "w20-bootstrap-2",
  "name": "W20 Bootstrap",
  "description": "W20 bootstrap framework provider",
  "modules": {
    "css-framework": {
      "path": "{w20-bootstrap-2}/modules/css-framework",
      "autoload": true,
      "configSchema": {
        "title": "CSS Framework module configuration",
        "type": "object",
        "additionalProperties": false
      }
    }
  },
  "requireConfig": {
    "map": {
      "*": {
        "{css-framework}": "{w20-bootstrap-2}"
      }
    },
    "paths": {
      "{bootstrap}": "${components-path:node_modules}/w20-bootstrap-2/libext/bootstrap",
      "{angular-animate}": "${components-path:node_modules}/angular-animate",
      "{angular-bootstrap}": "${components-path:node_modules}/w20-bootstrap-2/libext/angular-bootstrap",
      "{font-awesome}": "${components-path:node_modules}/w20-bootstrap-2/libext/font-awesome"
    },
    "shim": {
      "{bootstrap}/js/bootstrap": [
        "jquery"
      ],
      "{angular-animate}/angular-animate":[
        "{angular}/angular"
      ],
      "{angular-bootstrap}/ui-bootstrap-tpls": [
        "{angular}/angular",
        "{angular-animate}/angular-animate"
      ]
    }
  },
  "i18n": {
    "en": [
      "{w20-bootstrap-2}/i18n/messages-en.json"
    ],
    "fr": [
      "{w20-bootstrap-2}/i18n/messages-fr.json"
    ]
  }
}
